<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/offwhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleiv_inventory_category"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/black3"
        android:src="@drawable/ic_koleshop_logo_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/three_line_tile_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="72dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/textview_title_inventory_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grocery"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_subtitle_inventory_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:fontFamily="sans-serif-light"
            android:text="this is the description of the category. lets make the paper long"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
